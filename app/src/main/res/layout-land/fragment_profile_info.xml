<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="37dp"
            android:text="USER INFORMATION"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/t"
            android:layout_alignRight="@+id/t"
            android:layout_below="@+id/t"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="23dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/t4"
            android:layout_alignStart="@+id/t4"
            android:layout_below="@+id/t4"
            android:layout_marginTop="68dp"
            android:ems="10"
            android:hint="MAJOR"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/t1"
            android:layout_alignBottom="@+id/t1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:ems="10"
            android:hint="EXPECTED GRADUATION"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/t3"
            android:layout_alignLeft="@+id/t"
            android:layout_alignStart="@+id/t"
            android:ems="10"
            android:hint="UNIVERSITY"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/t"
            android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"
            android:layout_toEndOf="@+id/t"
            android:layout_toRightOf="@+id/t"
            android:text="submit" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/t4"
            android:layout_alignRight="@+id/t4"
            android:layout_alignTop="@+id/button2"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:text="read"
            android:onClick="read"
            />
    </RelativeLayout>
</FrameLayout>